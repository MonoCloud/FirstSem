<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/imageView"
            android:src="@mipmap/Rostock_University_Logo_2009" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Erster Einstieg"
            android:id="@+id/einstieg_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:onClick="switchToEinstieg"
            android:background="#ff618dbc" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Campus"
            android:id="@+id/campus_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:onClick="switchToCampus"
            android:background="#ff618dbc" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Termine und Fristen"
            android:id="@+id/termin_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:onClick="switchToTermin"
            android:background="#ff618dbc" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mensa"
            android:id="@+id/mensa_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:onClick="switchToMensa"
            android:background="#ff618dbc" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/map_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:onClick="switchToMap"
            android:background="#ff618dbc" />

    </LinearLayout>

</RelativeLayout>
