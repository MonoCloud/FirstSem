<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MenÃ¼"
            android:id="@+id/Menu_textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="false" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Erster Einstieg"
            android:id="@+id/einstieg_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="18dp"
            android:onClick="switchToEinstieg"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Campus"
            android:id="@+id/campus_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="18dp"
            android:onClick="switchToCampus"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Termine und Fristen"
            android:id="@+id/termin_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="18dp"
            android:onClick="switchToTermin" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mensa"
            android:id="@+id/mensa_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="18dp"
            android:onClick="switchToMensa"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/map_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:padding="18dp"
            android:onClick="switchToMap"/>

    </LinearLayout>
</RelativeLayout>
