<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.firstsem.kontakt">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Wie kontaktiere ich Universitätsmitarbeiter?"
            android:id="@+id/textView34"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Für den schnellen und kompetenten Kontakt mit Universitätsmitarbeitern bieten wir euch hier Verlinkungen zu den einzelnen Institutionen an."
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Professoren"
            android:id="@+id/button"
            android:onClick="switchToLink1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ff618dbc"
            android:padding="15dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Studenten-Sekretariat"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="switchToLink2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ff618dbc"
            android:padding="15dp" />
    </LinearLayout>
</RelativeLayout>
