<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.firstsem.Linklist">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Die wichtigsten Links im Überblick:"
                android:id="@+id/linklist_title"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Die Homepage der Universität Rostock ist euer zerntraler Anlaufpunkt für alle allgemeinen organisatorischen Belange euer Studium betreffend."
                        android:id="@+id/textView2" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Uni-Homepage"
                        android:id="@+id/button3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink3"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Als Studenten der Universität Rostock erhaltet ihr einen Mail-Account der Uni Rostock. Über diese Adresse erhaltet ihr alle wichtigen Benachrichtigungen."
                        android:id="@+id/textView4" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Uni-Mail"
                        android:id="@+id/button4"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink4"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Das Stud.IP dient der Vernetzung von Studenten und Dozenten. Hier könnt ihr euch für Veranstaltungen eintragen und erhaltet die dazugehörigen Dokumente."
                        android:id="@+id/textView5" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Stud.IP"
                        android:id="@+id/button5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink5"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Das Vorlesungsverzeichnis Listet alle Lehrveranstaltungen an der Uni Rostock auf. Hier könnt ihr euch auch euren Stundenplan zusammenstellen und als pdf oder ics exportieren."
                        android:id="@+id/textView6" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Vorlesungsverzeichnis"
                        android:id="@+id/button6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink6"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Das Studentenwerk ist der zentrale Anlaufpunkt für die Beantragung des BAföGs und wenn ihr euch um einen Wohnheimplatz bewerben wollt. Außerdem findet ihr dort auch die Mensapläne."
                        android:id="@+id/textView8" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Studentenwerk"
                        android:id="@+id/button7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink7"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Im Prüfungsportal müsst ihr euch für eure Prüfungen anmelden und habt Einsicht in eure erbrachten Leistungen. Weiterhin könnt ihr euch hier Studienbescheinigenungen ausdrucken."
                        android:id="@+id/textView9" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Prüfungsportal"
                        android:id="@+id/button8"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink8"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Der Fachschaftsrat besteht aus euren gewählten studentischen Vertretern. Sie sind euer erster Ansprechpartner bei Problemen bezüglich des Studiums."
                        android:id="@+id/textView10" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="FSR Informatik"
                        android:id="@+id/button9"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink9"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Über die Homepage der Fakultät für Elektrotechnik und Informatik enthält Informationen zu euren Studiengängen."
                        android:id="@+id/textView23" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="IEF"
                        android:id="@+id/button10"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink10"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Das Sprachenzentrum der Universität Rostock bietet euch ein breites Spektrum an Sprachkursen in unterschiedlichen Niveaustufen an."
                        android:id="@+id/textView25" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Sprachenzentrum"
                        android:id="@+id/button11"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink11"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ILIAS ist eine Lernplattform, die die Durchführung von Onlinetests erlaubt."
                        android:id="@+id/textView26" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="ILIAS"
                        android:id="@+id/button12"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink12"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In der Universitätsbibliothek findet ihr alle Bücher, die ihr für euer Studium benötigt."
                        android:id="@+id/textView28" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Universitätsbibliothek"
                        android:id="@+id/button13"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink13"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Die Universität Rostock bietet eine Vielzahl von Sportarten an, die ihr in jedem Halbsemester belegen könnt."
                        android:id="@+id/textView32" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Hochschulsport"
                        android:id="@+id/button14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink14"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Als Studenten der Universität Rostock erhaltet ihr Zugriff auf das WLAN-Netzwerk, dass in allen Unigebäuden verfügbar ist. Wie ihr euch damit verbindet erfahrt ihr hier."
                        android:id="@+id/textView33" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="WLAN an der Uni"
                        android:id="@+id/button15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:onClick="switchToLink15"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff618dbc"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
