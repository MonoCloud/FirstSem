<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.firstsem.einstieg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Das Wichtigste für einen erfolgreichen Studienbeginn ..."
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkliste für Erstis"
            android:id="@+id/checklist_button"
            android:layout_gravity="center_horizontal"
            android:onClick="switchToChecklist" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linkliste"
            android:id="@+id/linklist_button"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ablaufplan des Studiums"
            android:id="@+id/studienplan_button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
