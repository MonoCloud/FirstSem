<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.firstsem.plan">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WÃ¤hle deinen Studiengang um den Studienplan anzusehen"
            android:id="@+id/auswahl_textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Informatik"
            android:id="@+id/info_button"
            android:layout_gravity="center_horizontal"
            android:onClick="openINF"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Wirtschaftsinformatik"
            android:id="@+id/win_button"
            android:layout_gravity="center_horizontal"
            android:onClick="openWIN"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Informationstechnologie und technische Informatik"
            android:id="@+id/itti_button"
            android:layout_gravity="center_horizontal"
            android:onClick="openITTI"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</RelativeLayout>
